{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2016",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "build",
        "noEmitOnError": true,

        "strict": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "lib": ["es5", "dom", "es2015", "es2016", "es2017"],
        "skipLibCheck": true,
 
        "removeComments": true,
        "sourceMap": false
    },
    "files": [
        "src/*.ts"
    ]
}
